#!/usr/bin/env bash

## Initialize stack and site (full reset)
##
## Usage: fin rebuild

# Abort if anything fails
set -e

#-------------------------- Helper functions --------------------------------

# Console colors
red='\033[0;31m'
green='\033[0;32m'
green_bg='\033[1;97;42m'
yellow='\033[1;33m'
NC='\033[0m'

echo-red () { echo -e "${red}$1${NC}"; }
echo-green () { echo -e "${green}$1${NC}"; }
echo-green-bg () { echo -e "${green_bg}$1${NC}"; }
echo-yellow () { echo -e "${yellow}$1${NC}"; }

#-------------------------- Execution --------------------------------

# Site initialization
echo -e "${green}Rebuilding site...${NC}"

# This runs inside cli using http://docs.docksal.io/en/v1.4.0/fin/custom-commands/#executing-commands-inside-cli
fin init-site

# AI Assistant setup (optional, disabled by default)
fin init-ai

echo -e "${green_bg} DONE! ${NC}${green} Rebuild complete! ${NC}"

#-------------------------- END: Execution --------------------------------
